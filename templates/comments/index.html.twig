{% extends 'base.html.twig' %}

{% block title %}Comments index{% endblock %}

{% block body %}
    <h1>Comments index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Commentaire</th>
                <th>DatePublication</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.commentaire }}</td>
                <td>{{ comment.datePublication ? comment.datePublication|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ comment.status ? 'Publié' : 'Brouillon' }}</td>
                <td>
                    <a href="{{ path('app_comments_show', {'id': comment.id}) }}">show</a>
                    <a href="{{ path('app_comments_edit', {'id': comment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('app_comments_new') }}" style="text-decoration:none;" >Créer un Commentaire &emsp;</a> #}


    <h1>Créer un Commentaire</h1>

    {{ include('comments/_form.html.twig') }}

    <br>
    <a href="{{ path('app_articles') }}" style="text-decoration:none;">Article</a>
   
{% endblock %}
